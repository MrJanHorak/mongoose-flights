<%- include('../partials/header') %>

<link rel="stylesheet" href="/stylesheets/flights/index.css" />

<%- include('../partials/nav') %>

  <h1>Mongoose Flights</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight #</th>
        <th>Departure Date</th>
        <th>Flight Details</th>
        <th>Delete Flight</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(f => { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td class="<%- (f.departs) <= Date.now() ? "pastDate" : "futureDate" %>">
            <%= f.departs %>
          </td>
          <td><a href="/flights/<%= f._id %>">Details</a></td>
          <td>
            <form action="/flights/<%= f._id %>?_method=DELETE" method="POST">
            <button class="delete" >X</button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <%- include('../partials/footer') %>